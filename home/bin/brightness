#step=$(($max / $step))

step=$(~/.bin/brightness_levels)
if [ -z "$step" ] || [ "${step%%.*}" -lt 1 ]; then 
	step=2%
fi

case $1 in 
	up) brightnessctl set $step+;;
	down) brightnessctl set $step-;;
esac
