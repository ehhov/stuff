#!/bin/sh

text=" gYw "
corner='\'
bgs="49 40 41 42 43 44 45 46 47 100 101 102 104 104 105 106 107"
lens="17 9 6" # table is split a bit nicer
defaultlen=9
cols=$(tput cols)
while [ "${#corner}" -lt 2 ]; do corner=" $corner"; done

readable() {
	case $* in
	*9) echo '-';;
	4*) echo $(($* - 40));;
	10*) echo $(($* - 92));;
	esac
}

table() {
	printf "\033[m"
	echo -n " $corner"
	for bg in "$@"; do
		printf " %${#text}s" "$(readable $bg)"
	done
	echo
	for fg in $bgs; do
		printf " %${#corner}s" "$(readable $fg)"
		for bg in "$@"; do
			printf "\033[m "
			printf "\033[${bg};$(($fg - 10))m"
			echo -n "$text"
		done
		printf "\033[m"
		echo
	done
	echo
}


if [ "$cols" ]; then
	if [ $# -eq 0 ]; then
		for len in $lens; do
			if [ "$cols" -ge $((${#corner}+1 + $len*(${#text}+1))) ]
			then break; fi
		done
	else
		len=$(( ($cols-1-${#corner}) / (1+${#text}) ))
	fi
else
	len=$defaultlen
fi
set -- $bgs
while [ $# -gt 0 ]; do
	c=0; arg=''
	for i in "$@"; do
		arg="$arg $i"
		c=$(($c + 1))
		if [ $c -eq $len ]; then break; fi
	done
	table $arg
	shift $c
done
