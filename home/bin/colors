#! /bin/bash

text=" gYw "
corner='\'
fgs=(39 {30..37} {90..97})
bgs=(49 {40..47} {100..107})
readable=([39]=- [49]=-)
for i in {0..7}; do
	readable[3$i]=$i
	readable[4$i]=$i
	readable[9$i]=$(($i+8))
	readable[10$i]=$(($i+8))
done
lens="17 9 6" # table is split a bit nicer
defaultlen=9
cols=$(tput cols)
while [ "${#corner}" -lt 2 ]; do corner=" $corner"; done

table() {
	printf "\033[m"
	echo -n " $corner"
	for _bg in "$@"; do
		printf " %${#text}s" "${readable[$_bg]}"
	done
	echo
	for _fg in "${fgs[@]}"; do
		printf " %${#corner}s" "${readable[$_fg]}"
		for _bg in "$@"; do
			printf "\033[m "
			printf "\033[${_bg};${_fg}m"
			echo -n "$text"
		done
		printf "\033[m"
		echo
	done
	echo
}


if [ -n "$cols" ]; then
	if [ -n "$*" ]; then
		len=$(( ($cols-1-${#corner}) / (1+${#text}) ))
	else
		for len in $lens; do
			[ "$cols" -ge $((${#corner}+1 + $len*(${#text}+1))) ] && break
		done
	fi
else
	len=$defaultlen
fi
left="${#bgs[@]}"
while [ "$left" -gt 0 ]; do
	table "${bgs[@]:0:$len}"
	bgs=("${bgs[@]:$len}")
	left="${#bgs[@]}"
done

#echo "to scroll, try ${0##*/} | less -R"
