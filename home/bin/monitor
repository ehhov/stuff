#!/bin/sh

dash=--
internal=eDP-1
external=DP-1
extmode=2560x1440

case $1 in
	dis)
		xrandr ${dash}output ${internal} ${dash}auto ${dash}transform none;
		xrandr ${dash}output ${external} ${dash}off;;

	ext)
		xrandr ${dash}output ${external} ${dash}auto ${dash}left${dash}of eDP${dash}1;
		xrandr ${dash}output ${internal} ${dash}off;;

	split)
		xrandr ${dash}output ${internal} ${dash}auto ${dash}transform none;
		xrandr ${dash}output ${external} ${dash}auto ${dash}right-of ${internal};;

	dup)
		xrandr ${dash}output ${external} ${dash}auto ${dash}primary;
		xrandr ${dash}output ${internal} ${dash}scale-from ${extmode} ${dash}same-as ${external};;

	rot)
		xrandr ${dash}output ${external} ${dash}rotate left;;

	unrot)
		xrandr ${dash}output ${external} ${dash}rotate normal;;

esac

killall picom && picom
