#!/bin/sh

if [ -z "$1"]; then
	echo 'No files specified.'
	exit 1
fi

TeXauxiliary='aux bbl blg out toc log synctex.gz nav snm lof lot bit idx glo bcf ilg ind fdb_latexmk fls'

for file in "$@"; do
	file="${file%.tex}"
	file="${file%.}"
	for i in $TeXauxiliary; do
		 if test -f "$file.$i"; then rm -f "$file.$i"; fi
	done
done
