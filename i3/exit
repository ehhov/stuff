[poweroff]
full_text="Shut down"
command=poweroff
color=#ff1f1f

[reboot]
full_text="Reboot"
command=reboot
color=$ff6f0f

[i3exit]
full_text="Exit i3"
command=i3-msg -q exit
color=#ffaf10

[i3restart]
full_text="Restart i3"
command=i3-msg -q restart
color=#ffff00

[quit]
full_text="Close  "
command=i3-msg 'bar mode invisible bar-2' >/dev/null
color=#00ff00
