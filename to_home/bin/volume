case $1 in
	up) pactl set-sink-volume 0 +2%;;
	down) pactl set-sink-volume 0 -2%;;
	toggle) pactl set-sink-mute 0 toggle;;
	mute) pactl set-sink-mute 0 1;;
	bigup) pactl set-sink-volume 0 +15%;;
	bigdown) pactl set-sink-volume 0 -15%;;
esac

