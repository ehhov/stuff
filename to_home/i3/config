set $modeapp Apps: Firefox[f] Chrome[c] Telegram[t] Emacs[e] TeXStudio[x] Okular[o] Dolphin[d] Monitor[Enter] Close[esc]

mode "$modeapp" {
	bindsym Escape mode "default"
	bindsym f exec firefox; mode "default"
	bindsym t exec /opt/tg/app; mode "default"
	bindsym e exec emacs; mode "default"
	bindsym x exec texstudio; mode "default"
	bindsym c exec google-chrome; mode "default"
	bindsym o exec okular; mode "default"
	bindsym d exec dolphin; mode "default"
	bindsym Return mode "$modemonitor"
}

set $modemonitor Monitor: Both [b,l]  External only [e]  Disconnect [d,o]  Rotate left[r] normal[n]  Close [esc]

mode "$modemonitor" {
	bindsym Escape mode "default"
	bindsym b exec ~/.bin/monitor left; mode "default"
	bindsym l exec ~/.bin/monitor left; mode "default"
	bindsym e exec ~/.bin/monitor ext; mode "default"
	bindsym d exec ~/.bin/monitor dis; mode "default"
	bindsym o exec ~/.bin/monitor dis; mode "default"
	bindsym r exec ~/.bin/monitor rot; mode "default"
	bindsym n exec ~/.bin/monitor unrot; mode "default"
}

set $modeexit Restart i3 [r]  Exit i3 [q,e]  Lock [l]  Suspend [s]  Reboot [R]  Shut down [P]  Close [esc]

mode "$modeexit" {
	bindsym Escape mode "default"
	bindsym r exec i3-msg -q restart
	bindsym q exec i3-msg -q exit
	bindsym e exec i3-msg -q exit
	bindsym s exec systemctl suspend; mode "default"
	bindsym Shift+r exec reboot
	bindsym Shift+p exec poweroff
	bindsym l exec i3lock -c 241241; mode "default"
}



